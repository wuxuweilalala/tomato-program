
.container { 
  background: #F6F6F6;
  height: 100vh;
  display: flex;
  flex-direction: column;
 }
 .header { 
  background: #fff;
  display: flex;
  align-items: center;
  color: #FE996F;
  font-size: 22rpx;
  padding: 10rpx 40rpx;
  margin-bottom: 20rpx;
  width: 100%;
 }

.header .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0rpx 20rpx;
}



.header .name {
  color: black;
  font-size: 32rpx;
}


.tabs { 
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  padding: 15rpx 0;
  margin-bottom: 22rpx;
  width: 100%;
}
.tabs > view { 
  text-align: center;
  padding: 8rpx 0rpx;
  width: 50%;
 }
.tabs > view.hover-active { 
  opacity: 0.5;
 }
.tabs > view.active { 
  border-bottom: 7rpx solid orange;
 }

.container .lists { 
  height: 880rpx;
  overflow: scroll;
  padding: 0 24rpx;
  box-sizing:  border-box;
 }


.container .lists .item {
  background: #fff;
  font-size: 32rpx;
  color: #333;
  border-radius: 8rpx;
  padding: 16rpx 28rpx 35rpx 40rpx;
  box-shadow: 1rpx 2rpx 6rpx 4rpx rgba(0,0,0,0.10);
  margin-bottom: 30rpx;
}

.container .lists .item .time {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}
.container .lists .item .content {
  display: flex;
  padding-bottom: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: #333333 ;
}
.container .lists .item .content text {
  padding-right: 25rpx;
}
.container .lists .item .content detail {
  flex: 1;
  flex-wrap: wrap;
}
.qr::after { border: none; }
.qr { 
  background: transparent; 
  color: #FE996F; 
  font-size: 24rpx;
  margin-right: 5px;
  }

