.login {
  display: flex;  
  flex-direction: column;
  justify-content: flex-start;
  align-items: center; 
  height: 100vh;
  background: #EEF7F6;
}

.login .avatar {
  width: 270rpx;
  height: 270rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 12rpx solid #F6705A;
  margin-bottom: 20rpx;
  margin-top: 283rpx;
}

.login .details {
    margin-bottom: 60rpx;
}
.login .details .name {
  color: #F6705A;
  font-size: 38rpx;
  position: relative;
}

.login .details .name::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background:#F6705A;
}

.loginButton {
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(to right, #EF9B75,#F6705A);
}

.login .binding {
  color: #F6705A;
  font-size: 24rpx;
  margin-top: 46rpx;
}